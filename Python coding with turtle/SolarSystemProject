from turtle import *

speed(0)

bgcolor("black")

#create the orange planet
color("orange")
begin_fill()
circle(60)
end_fill()

#move foward
penup()
forward(100)
pendown

#create the grey planet
color("grey")
begin_fill()
circle(20)
end_fill()

#move foward
penup()
forward(80)
pendown

#create the red planet
color("red")
begin_fill()
circle(40)
end_fill()

#move foward
penup()
forward(90)
pendown

#create the green planet
color("green")
begin_fill()
circle(30)
end_fill()

done()

